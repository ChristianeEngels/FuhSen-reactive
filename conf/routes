# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User Interface routes
GET     /                                                   controllers.Application.index()

# Search Engine API routes
GET     /engine/v1/search                                   controllers.de.fuhsen.engine.SearchEngine.search(query: String)
GET     /engine/v1/expandQuery                              controllers.de.fuhsen.engine.SearchEngine.expandQuery(query: String)

# REST API Wrappers
GET     /ldw/v1/restApiWrapper/id/:wrapperId/search         controllers.de.fuhsen.wrappers.WrapperController.search(wrapperId: String, query: String)
GET     /ldw/v1/restApiWrapper/search                       controllers.de.fuhsen.wrappers.WrapperController.searchMultiple(query: String, wrapperIds: String)
GET     /ldw/v1/restApiWrapper                              controllers.de.fuhsen.wrappers.WrapperController.wrapperIds()

#POST     /facebook/search                                    controllers.de.fuhsen.wrappers.FacebookWrapper.search

GET     /initSearch                                         controllers.Application.InitSearch()
GET     /:wrapperId/getToken                                controllers.de.fuhsen.wrappers.TokenRetrievalController.getToken(wrapperId: String)
GET     /:wrapperId/code2token                              controllers.de.fuhsen.wrappers.TokenRetrievalController.code2token(code:String, wrapperId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                       controllers.Assets.versioned(path="/public", file: Asset)


